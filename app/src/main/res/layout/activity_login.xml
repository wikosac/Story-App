<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">

    <id.wikosac.storyapp.ui.custom.EmailEditText
        android:id="@+id/ed_login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="64dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="64dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <id.wikosac.storyapp.ui.custom.PassEditText
        android:id="@+id/ed_login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/ed_login_email"
        app:layout_constraintEnd_toEndOf="@+id/ed_login_email"
        app:layout_constraintTop_toBottomOf="@+id/ed_login_email"/>

    <id.wikosac.storyapp.ui.custom.MyButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_login_password"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/errEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ed_login_email"
        app:layout_constraintStart_toEndOf="@+id/ed_login_email"
        app:layout_constraintTop_toTopOf="@+id/ed_login_email"
        app:srcCompat="@drawable/ic_baseline_error_outline_24" />

    <ImageView
        android:id="@+id/errPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ed_login_password"
        app:layout_constraintStart_toEndOf="@+id/ed_login_password"
        app:layout_constraintTop_toTopOf="@+id/ed_login_password"
        app:srcCompat="@drawable/ic_baseline_error_outline_24" />
</androidx.constraintlayout.widget.ConstraintLayout>